<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="DosingApp.Views.RecipePage"
            Title="{Binding Title}">
    <TabbedPage.Children>
        <ContentPage Title="Параметры">

            <ScrollView>
                
                <StackLayout Margin="{StaticResource PageMargin}">

                    <StackLayout>

                        <Label 
                            Text="Название"
                            TextColor="{StaticResource LabelEntryColor}"/>
                        <Entry 
                            Placeholder="Введите название рецепта" 
                            Text="{Binding Name}" />

                        <Label 
                            Text="Культура"
                            TextColor="{StaticResource LabelEntryColor}"/>
                        <Picker 
                            x:Name="cropsList"
                            Title="Выберите культуру"
                            ItemsSource="{Binding Crops}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding Crop, Mode=TwoWay}" />

                        <Label 
                            Text="Вид обработки" 
                            TextColor="{StaticResource LabelEntryColor}"/>
                        <Picker 
                            x:Name="processingTypesList"
                            Title="Выберите вид обработки"
                            ItemsSource="{Binding ProcessingTypes}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding ProcessingType, Mode=TwoWay}" />

                        <Label 
                            Text="Носитель смеси"
                            TextColor="{StaticResource LabelEntryColor}"/>
                        <Picker 
                            x:Name="carriersList"
                            Title="Выберите носитель смеси"
                            ItemsSource="{Binding Carriers}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding Carrier, Mode=TwoWay}" />

                        <Label 
                            Text="Заметка"
                            TextColor="{StaticResource LabelEntryColor}"/>
                        <Editor 
                            Placeholder="Введите текст заметки здесь"
                            Text="{Binding Note}" />

                        <Label 
                            Text="Минимум носителя в запасе, %" 
                            TextColor="{StaticResource LabelEntryColor}"/>
                        <Entry 
                            Placeholder="Введите запас носителя" 
                            Text="{Binding CarrierReserve}" 
                            Keyboard="Numeric" />

                    </StackLayout>

                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button 
                                Text="Сохранить" 
                                Command="{Binding RecipesViewModel.SaveCommand}" 
                                CommandParameter="{Binding}" />
                            <Button 
                                Grid.Column="1" 
                                Text="Удалить" 
                                Command="{Binding RecipesViewModel.DeleteCommand}" 
                                CommandParameter="{Binding}" />
                        </Grid>
                    </StackLayout>

                </StackLayout>

            </ScrollView>

        </ContentPage>
        
        <ContentPage Title="Компоненты">

            <StackLayout Margin="{StaticResource PageMargin}">

                <ListView x:Name="recipeComponentsList" >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal">
                                        
                                        
                                        
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </StackLayout>
            
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>